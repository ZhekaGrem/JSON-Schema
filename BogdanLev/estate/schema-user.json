{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "format": "email"
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "password": {
            "type": "string",
            "minLength": 6
        },
        "role": {
            "type": "string",
            "enum": [
                "user",
                "admin"
            ]
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        },
        "profile": {
            "type": "object",
            "properties": {
                "phone": {
                    "type": "string",
                    "pattern": "^\\+?[0-9]{7,15}$"
                },
                "city": {
                    "type": "string"
                },
                "district": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                }
            },
            "required": [
                "phone",
                "city",
                "district",
                "address"
            ],
            "interactions": {
                "type": "object",
                "properties": {
                    "likes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "userId": {
                                    "type": "string"
                                },
                                "timestamp": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            },
                            "required": [
                                "userId",
                                "timestamp"
                            ]
                        }
                    },
                    "dislikes": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "userId": {
                                    "type": "string"
                                },
                                "timestamp": {
                                    "type": "string",
                                    "format": "date-time"
                                }
                            },
                            "required": [
                                "userId",
                                "timestamp"
                            ]
                        }
                    },
                    "saved": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "notifications": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "boolean"
                    },
                    "push": {
                        "type": "boolean"
                    },
                    "propertyAlerts": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "email",
                    "push",
                    "propertyAlerts"
                ]
            }
        },
        "required": [
            "email",
            "name",
            "password",
            "role",
            "createdAt",
            "updatedAt",
            "profile",
            "interactions",
            "notifications"
        ]
    }
}