{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "email": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "role": {
            "type": "string"
        },
        "phone": {
            "type": "string"
        },
        "city": {
            "type": "string"
        },
        "district": {
            "type": "string"
        },
        "address": {
            "type": "string"
        },
        "likedPropertyId": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "dislikeProperty": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "bookmarkPropertyId": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "createdAt": {
            "type": "string",
            "format": "date-time"
        },
        "updatedAt": {
            "type": "string",
            "format": "date-time"
        },
        "notifications": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "boolean"
                },
                "push": {
                    "type": "boolean"
                },
                "propertyAlerts": {
                    "type": "boolean"
                }
            },
            "required": [
                "email",
                "push",
                "propertyAlerts"
            ]
        }
    },
    "required": [
        "id",
        "email",
        "name",
        "password",
        "role",
        "phone",
        "city",
        "district",
        "address",
        "likedPropertyId",
        "dislikeProperty",
        "bookmarkPropertyId",
        "createdAt",
        "updatedAt",
        "notifications"
    ]
}